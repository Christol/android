<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/station_free_frame"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/station_free_QR"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"/>
    </FrameLayout>

    <TextView
        android:id="@+id/station_free_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/station_free_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/free_margint_size"
        android:text="@string/station_use_welcome"
        android:textColor="@android:color/black"
        android:textSize="@dimen/free_text_size" />

</RelativeLayout>